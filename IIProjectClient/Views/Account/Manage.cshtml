@model IIProjectClient.Models.User
@{
    ViewBag.Title = "Manage";
}

<h2>Edit account</h2>

<div>
    <form action="@Url.Action("Manage")" method="post">
        <label><b>Username</b></label>
        <input type="text" name="username" value="@Model.username" required>
        <label><b>New password</b></label>
        <input type="password" name="password" value="@Model.password" required>
        <label><b>Old password</b></label>
        <input type="password" name="pword" value="" required>
        <button type="submit">Change</button>
    </form>
</div>
